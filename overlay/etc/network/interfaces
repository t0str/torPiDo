auto lo
iface lo inet loopback

auto eth0
iface eth0 inet static
	address 10.0.20.1
	netmask 255.255.255.0
	broadcast 10.0.20.255
	hostname torpido

# LTE stick
iface eth1 inet dhcp

auto wlan0
iface wlan0 inet static
	address 10.0.30.1
	netmask 255.255.255.0
	broadcast 10.0.30.255
	hostname torpido
